<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/startupImage"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/kubis_admin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:text="Startup Name"
        android:id="@+id/startupName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/startupImage"
        android:textColor="@color/md_black_1000"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/startupDesc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/startupName"
        android:layout_toEndOf="@+id/startupImage" />

</RelativeLayout>