<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.twiscode.kubisadmin.PromotedUserFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:clickable="true"
        android:id="@+id/commentator"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingLeft="30dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/fresh_green"
            android:paddingBottom="15dp"
            android:text="COMMENTATOR"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:textColor="@color/md_grey_600"
            android:text="See all commentator"/>

    </LinearLayout>

    <include layout="@layout/light_divider"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:clickable="true"
        android:id="@+id/superAdmin"
        android:layout_height="130dp"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/fresh_green"
            android:paddingBottom="15dp"
            android:text="SUPER ADMIN"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:textColor="@color/md_grey_600"
            android:text="See all admin"/>

    </LinearLayout>

    <include layout="@layout/light_divider"/>

    <LinearLayout
        android:orientation="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_height="130dp"
        android:id="@+id/promoteUser"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:textSize="18dp"
            android:textColor="@color/fresh_green"
            android:paddingBottom="15dp"
            android:text="PROMOTE USER"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:textColor="@color/md_grey_600"
            android:text="Promote user to be commentator or admin"/>

    </LinearLayout>

    <include layout="@layout/light_divider"/>

</LinearLayout>
