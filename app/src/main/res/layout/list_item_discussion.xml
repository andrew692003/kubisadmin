<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/vertical_margin"
        android:paddingBottom="@dimen/vertical_margin"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfilePicture"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_avatar_color_56dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/narrow_margin"
            android:layout_marginStart="@dimen/narrow_margin">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/placeholder_name"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/very_short_margin"
                android:text="@string/placeholder_comment"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/divider_light"/>

</LinearLayout>